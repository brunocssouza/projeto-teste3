generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Role {
  id_role   String @id @default(cuid())
  role_name String
}

model User {
  id_user   String  @id @default(cuid())
  user_name String
  cpf       Int     @unique
  email     String  @unique
  password  String?
}
